{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Unimozer Next",
  "version": "0.10.12",
  "identifier": "com.unimozer.next",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Unimozer Next",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "fileAssociations": [
      {
        "ext": ["umz"],
        "name": "Unimozer Next Project",
        "description": "Unimozer Next Project File",
        "mimeType": "application/x-unimozer-project",
        "role": "Editor",
        "rank": "Owner",
        "contentTypes": ["com.unimozer.next.project"],
        "exportedType": {
          "identifier": "com.unimozer.next.project",
          "conformsTo": ["public.data"]
        }
      }
    ],
    "windows": {
      "wix": {
        "fragmentPaths": [
          "./windows/fragments/umz-association.wxs",
          "./windows/fragments/installer-marker.wxs"
        ],
        "componentGroupRefs": ["UmzFileAssociationComponents", "InstallerMarkerComponents"]
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDBCOTRFQUE3QzRGOTAzRkQKUldUOUEvbkVwK3FVQ3pNWkYzdURnU2YxTm9EY3Q2TXhEWU9yNGNMSWhWY0lseHdUL2R4ZldmV3IK",
      "endpoints": [
        "https://github.com/haan/UnimozerNext/releases/latest/download/latest-{{target}}.json"
      ]
    }
  }
}
